<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_black"
    android:orientation="vertical" >

    <!-- 图像控件 -->

    <ImageView
        android:id="@+id/imgSelected"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:visibility="visible" />

    <!-- 载入图像按钮 -->

    <ImageButton
        android:id="@+id/loadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/load"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/situation"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/SaturationBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="127"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/hTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hue"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/hueBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="127"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/bTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lightness"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/brightBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="127"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- 按钮区域 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <!-- 旋转按钮 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <!-- 旋转按钮 -->

            <ImageButton
                android:id="@+id/btnRotate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:background="@drawable/rotate"
                android:contentDescription="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/rotate"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 图片效果 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 图片效果 -->

            <ImageButton
                android:id="@+id/btnEffect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="11dp"
                android:background="@drawable/color_line"
                android:contentDescription="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/effect"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 滤镜按钮 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 滤镜按钮 -->

            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="11dp"
                android:background="@drawable/adobe_photoshop"
                android:contentDescription="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="@string/filter"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 边框 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 边框 -->

            <ImageButton
                android:id="@+id/btnAddFrame"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:background="@drawable/pal"
                android:contentDescription="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:text="@string/frame"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 色相饱和度 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 色相饱和度 -->

            <ImageButton
                android:id="@+id/btnColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:background="@drawable/color_meter"
                android:contentDescription="@string/desc" />

            <TextView
                android:id="@+id/palTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/palette"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 删除 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 删除 -->

            <ImageButton
                android:id="@+id/btnCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:background="@drawable/deletered"
                android:contentDescription="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:text="@string/delete"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 水平的按钮线性布局 -->

</RelativeLayout>